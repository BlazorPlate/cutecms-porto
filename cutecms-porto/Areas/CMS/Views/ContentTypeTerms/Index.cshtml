@model IEnumerable<cutecms_porto.Areas.CMS.Models.DBModel.ContentTypeTerm>
@{
    ViewBag.MainTitle = Resources.Resources.Terms;
    ViewBag.Title = Resources.Resources.Index;
}
<p>
    @Html.ActionLink(Resources.Resources.Create, "Create", new { id = ViewBag.ContentTypeId })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ContentType.Code)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LanguageId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Value)
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ContentType.Code)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Language.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Value)
            </td>
            <td>
                @Html.ActionLink(Resources.Resources.Edit, "Edit", new { id = item.Id }) |
                @Html.ActionLink(Resources.Resources.Details, "Details", new { id = item.Id }) |
                @Html.ActionLink(Resources.Resources.Delete, "Delete", new { id = item.Id })
            </td>
        </tr>
    }
</table>
<p>
    @Html.ActionLink(Resources.Resources.BackToList, "Index", "ContentTypes", new { id = ViewBag.ContentTypeId }, null)
</p>