            @Html.LabelFor(model => model.ParentMenuItemId, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("ParentMenuItemId", new SelectList(string.Empty, "Id", "Name"), Resources.Resources.ChooseParentMenuItem, htmlAttributes: new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.HasShortcut, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
