            </div>
        </div>
        <div class="form-group">
            @Html.Label(Resources.Resources.Dimensions, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBox("width", null, new { @placeholder = @Resources.Resources.Width })
