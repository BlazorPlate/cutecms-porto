@model IEnumerable<cutecms_porto.Areas.CMS.Models.DBModel.GalleryCategory>

@{
    ViewBag.MainTitle = Resources.Resources.GalleryCategories;
    ViewBag.Title = Resources.Resources.Index;
}
<p>
    @Html.ActionLink(Resources.Resources.Create, "Create", new { id = ViewBag.GalleryId })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CategoryId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GalleryId)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Category.Code)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gallery.Code)
            </td>
            <td>
                @Html.ActionLink(Resources.Resources.Edit, "Edit", new { id = item.Id }) |
                @Html.ActionLink(Resources.Resources.Details, "Details", new { id = item.Id }) |
                @Html.ActionLink(Resources.Resources.Delete, "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
<p>@Html.ActionLink(Resources.Resources.BackToList, "Index", "Galleries")</p>
