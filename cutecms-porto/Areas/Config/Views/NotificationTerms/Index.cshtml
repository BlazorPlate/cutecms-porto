@model IEnumerable<cutecms_porto.Areas.Config.Models.DBModel.NotificationTerm>
@{  
    ViewBag.MainTitle = Resources.Resources.Terms;
    ViewBag.Title = Resources.Resources.Index;
}
<p>
    @Html.ActionLink(Resources.Resources.Create, "Create", new { id = ViewBag.NotificationId })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Subject)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LanguageId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NotificationId)
        </th>
        <th></th>
    </tr>
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Subject)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Language.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Notification.NotificationCode.Code)
        </td>
        <td>
            @Html.ActionLink(Resources.Resources.Edit, "Edit", new { id=item.Id }) |
            @Html.ActionLink(Resources.Resources.Details, "Details", new { id=item.Id }) |
            @Html.ActionLink(Resources.Resources.Delete, "Delete", new { id=item.Id })
        </td>
    </tr>
}
</table>
<p>
    @Html.ActionLink(Resources.Resources.BackToList, "Index", "Notifications", new { id = ViewBag.NotificationId }, null)
</p>