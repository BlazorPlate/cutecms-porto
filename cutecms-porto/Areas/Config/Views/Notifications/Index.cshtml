@model IEnumerable<cutecms_porto.Areas.Config.Models.DBModel.Notification>
@{
    ViewBag.MainTitle = Resources.Resources.Notifications;
    ViewBag.Title = Resources.Resources.Index;
}
<p>
    @Html.ActionLink(Resources.Resources.Create, "Create", new { id = ViewBag.NotificationId })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CodeId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SMTPId)
        </th>
        <th></th>
    </tr>
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NotificationCode.Code)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SMTPSetting.Code)
        </td>
        <td>
            @Html.ActionLink(Resources.Resources.Edit, "Edit", new { id=item.Id }) |
            @Html.ActionLink(Resources.Resources.Details, "Details", new { id=item.Id }) |
            @Html.ActionLink(Resources.Resources.Terms, "Index", "NotificationTerms", new { id = item.Id }, null) |
            @Html.ActionLink(Resources.Resources.Delete, "Delete", new { id=item.Id })
        </td>
    </tr>
}
</table>
