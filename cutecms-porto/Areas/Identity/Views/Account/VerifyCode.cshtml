@model cutecms_porto.Areas.Identity.Models.VerifyCodeViewModel
@{
    ViewBag.Title = Resources.Resources.VerificationCode;
    ViewBag.MainTitle = Resources.Resources.VerificationCode;
    ViewBag.SubTitle = Resources.Resources.EnterVerificationCode;
    ViewBag.IconTitle = "fa fa-lock";
    Layout = "~/Areas/Identity/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("VerifyCode", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.Hidden("provider", @Model.Provider)
    @Html.Hidden("rememberMe", @Model.RememberMe)
    @Html.AntiForgeryToken()
    <div class="form-group">
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Code, new { @class = "form-control", @placeholder = Resources.Resources.VerificationCode + "..." })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            <div>
                @Html.CheckBoxFor(m => m.RememberBrowser)
                @Html.LabelFor(m => m.RememberBrowser)
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            <input type="submit" value='@Resources.Resources.Verify' class="btn btn-primary"/>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            @Html.ValidationSummary(false, "", new { @class = "text-danger" })
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}