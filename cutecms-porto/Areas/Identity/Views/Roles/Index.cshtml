@model IEnumerable<cutecms_porto.Areas.Identity.Models.RoleViewModel>
@{
    ViewBag.MainTitle = Resources.Resources.Roles;
    ViewBag.Title = Resources.Resources.Index;
}
<p>
    @Html.ActionLink(Resources.Resources.Create, "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.RoleName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RoleName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.ActionLink(Resources.Resources.Edit, "Edit", new { id = item.RoleName }) |
                @Html.ActionLink(Resources.Resources.Delete, "Delete", new { id = item.RoleName })
            </td>
        </tr>
    }
</table>