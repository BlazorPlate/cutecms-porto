@using cutecms_porto.Areas.Config.Models.DBModel
@using cutecms_porto.Helpers
<!DOCTYPE html>
<html lang="@cutecms_porto.Helpers.CultureHelper.GetCurrentNeutralCulture()" dir="@(cutecms_porto.Helpers.CultureHelper.IsRighToLeft() ? "rtl" : "ltr")">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="robots" content="noindex,nofollow" />
    <title>@ViewBag.Title - @(OrganizationData.Organization?.Name)</title>
    <!-- CSS -->
    <link href="~/assets/admin/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    @Styles.Render("~/bundles/root-css" + (cutecms_porto.Helpers.CultureHelper.IsRighToLeft() ? "-rtl" : ""))
    <link href="~/assets/identity/identity.css" rel="stylesheet" />
    @if (cutecms_porto.Helpers.CultureHelper.IsRighToLeft())
    {
        <style>
            .dropdown-menu {
                right: 0px !important;
                left: auto !important;
            }
        </style>
    }
    else
    {
        <style>
            .dropdown-menu {
                right: auto !important;
                left: 0px !important;
            }
        </style>
    }
    <style>
        .top-100 {
            top: 100px;
        }
    </style>
</head>
<body class="body-top">
    <div>
        <!-- Navbar Menu -->
        <nav class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>
                <!-- Collect the nav links, forms, and other content for toggling -->
                <div class="collapse navbar-collapse" style="margin:0 1px 0 1px;" id="bs-example-navbar-collapse-1">
                    <div>
                        <ul class="nav navbar-nav">
                            @Html.Partial("_LoginPartial")
                        </ul>
                    </div>
                    <div>
                        <ul class="nav navbar-nav  @(CultureHelper.IsRighToLeft() ? "navbar-left" : "navbar-right")">
                            <li>
                                <span class="li-social">
                                    <a href="@(OrganizationData.Organization?.FacebookUrl)"><i class="fa fa-facebook-square"></i></a>
                                </span>
                            </li>
                            <li>
                                <span class="li-social">
                                    <a href="@(OrganizationData.Organization?.TwitterUrl)"><i class="fa fa-twitter-square"></i></a>
                                </span>
                            </li>
                            <li>
                                <span class="li-social">
                                    <a href="@(OrganizationData.Organization?.GooglePlusUrl)"><i class="fa fa-google-plus-square"></i></a>
                                </span>
                            </li>
                            <li>
                                <span class="li-social">
                                    <a href="@(OrganizationData.Organization?.LinkedInUrl)"><i class="fa fa-linkedin-square"></i></a>
                                </span>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </nav>
        <div class="wrap">
            <div class="container body-content">
                <div class="row">
                    <div class="col-sm-6 col-sm-offset-3 form-box top-100">
                        <div class="form-top">
                            <div class="form-top-left" @(cutecms_porto.Helpers.CultureHelper.IsRighToLeft() ? "style=text-align:right" : "style=text-align:left")>
                                <h3>@ViewBag.MainTitle</h3>
                                <p>@ViewBag.SubTitle</p>
                            </div>
                            <div class="form-top-right">
                                <i class='@ViewBag.IconTitle'></i>
                            </div>
                        </div>
                        <div class="form-bottom" style="padding-top:5px;padding-bottom:5px">
                            @RenderBody()
                        </div>
                    </div>
                </div>
                @RenderSection("SocialLinks", required: false)
            </div>
        </div>
    </div>
    <div style="margin: 0; padding: 0; left: 0; top: 0; width: 100%; position: fixed; z-index: -999999;"><img style="margin: 0; padding: 0; border: medium; left: 0; width: 100%; height: 960px; position: absolute; z-index: -999999; max-height: none; max-width: none;" src="~/assets/images/identity/login-bg.jpg"></div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
