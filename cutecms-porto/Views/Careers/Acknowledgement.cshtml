@model cutecms_porto.Areas.RMS.Models.NotificationViewModel
@{
    ViewBag.Title = Resources.Resources.Acknowledgement;
}
@section PageHeader
{
    <section class="page-header">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <h1>@ViewBag.Title</h1>
                    <h2>@Resources.Resources.ApplicationNumber <span style="color:yellow;font-weight:bold">@Model.ApplicationNumber</span></h2>
                </div>
            </div>
        </div>
    </section>
}
    <div class="container text-justify">
        @if (!string.IsNullOrEmpty(Model.Body))
        {
            <p class="bold">@Resources.Resources.Dear @Model.FullName,</p>
            @Html.Raw(HttpUtility.HtmlDecode(Model.Body))
        }
        <br />
        @Html.ActionLink(Resources.Resources.BackToList, "Index", "Vacancies")
        <div class="post-block post-share">
            <h3 class="heading-primary"><i class="fa fa-share"></i>@Resources.Resources.Share</h3>
            <!-- AddThis Button BEGIN -->
            <div class="addthis_toolbox addthis_default_style ">
                <a class="addthis_button_facebook_like" fb:like:layout="button_count"></a>
                <a class="addthis_button_tweet"></a>
                <a class="addthis_button_pinterest_pinit"></a>
                <a class="addthis_counter addthis_pill_style"></a>
            </div>
            <script type="text/javascript" src="//s7.addthis.com/js/300/addthis_widget.js#pubid=xa-50faf75173aadc53"></script>
            <!-- AddThis Button END -->
        </div>
    </div>

