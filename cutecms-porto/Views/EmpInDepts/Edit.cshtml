@model cutecms_porto.Areas.Identity.Models.DBModel.EmpInDept
@using System.Threading
@{
    ViewBag.Title = Resources.Resources.Departments;
}
@section PageHeader
{
    <section class="page-header">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <h1>@ViewBag.Title</h1>
                    <h2>@Resources.Resources.Edit</h2>
                </div>
            </div>
        </div>
    </section>
}
<section>
    <div class="container">
        <!-- RIGHT -->
        <div class="col-lg-9 col-md-9 col-sm-8 col-lg-push-3 col-md-push-3 col-sm-push-4 margin-bottom-80">
            <ul id="tabbed-list" class="nav nav-tabs nav-top-border">
                <li class="active"><a data-toggle="tab">@Resources.Resources.Departments</a></li>
            </ul>
            <div class="tab-content margin-top-20">
                <h4>@Resources.Resources.Edit</h4>
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(model => model.EmpId)
                    <div>
                        <hr/>
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.Id)
                        <div class="form-group">
                            @Html.LabelFor(model => model.DeptId)
                            @Html.DropDownList("DeptId", null, string.Empty, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.DeptId, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.OccupationId)
                            @Html.DropDownList("OccupationId", null, string.Empty, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.OccupationId, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.EmployeeTypeId)
                            @Html.DropDownList("EmployeeTypeId", null, string.Empty, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.EmployeeTypeId, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <button type="submit" name="submit" value="AcademicInfo" class="btn btn-primary">@Resources.Resources.Save</button>
                        </div>
                        <div class="form-group">
                            <br />
                            @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                        </div>
                    </div>
                }
                <div>
                    @Html.ActionLink(Resources.Resources.BackToList, "Index", new { redirectEmpId = Model.EmpId })
                </div>
            </div>
        </div>
        <!-- LEFT -->
        @Html.Partial("_MyProfile");
    </div>
</section>