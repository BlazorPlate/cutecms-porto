@model cutecms_porto.Areas.Identity.Models.DBModel.Publication
@using System.Threading
@{
    ViewBag.Title = Resources.Resources.Publications;
}
@section PageHeader
{
    <section class="page-header">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <h1>@ViewBag.Title</h1>
                    <h2>@Resources.Resources.Delete</h2>
                </div>
            </div>
        </div>
    </section>
}
<section>
    <div class="container">
        <!-- RIGHT -->
        <div class="col-lg-9 col-md-9 col-sm-8 col-lg-push-3 col-md-push-3 col-sm-push-4 margin-bottom-80">
            <ul id="tabbed-list" class="nav nav-tabs nav-top-border">
                <li class="active"><a data-toggle="tab">@Resources.Resources.Publications</a></li>
            </ul>
            <div class="tab-content margin-top-20">
                <h4>@Resources.Resources.Delete</h4>
                <h5>@Resources.Resources.DeleteConfirmation</h5>
                @Html.AntiForgeryToken()
                <div>
                    <hr />
                    <dl>
                        <dt>
                            @Html.DisplayNameFor(model => model.Name)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Name)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.Abstract)
                        </dt>
                        <dd>
                            @Html.Raw(HttpUtility.HtmlDecode(Model.Abstract))
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.Ordinal)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Ordinal)
                        </dd>
                    </dl>
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-actions no-color">
                            <input type="submit" value=@Resources.Resources.Delete class="btn btn-primary" /> |
                            @Html.ActionLink(Resources.Resources.BackToList, "Index", new { id = Model.Employee.TranslationId })
                        </div>
                    }
                </div>
            </div>
        </div>
        <!-- LEFT -->
        @Html.Partial("_MyProfile");
    </div>
</section>